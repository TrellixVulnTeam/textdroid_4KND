<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/empty_view"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/default_padding"
                android:padding="@dimen/default_padding"
                android:background="@color/document_grid_background"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

    <View
            android:layout_marginBottom="-36dp"
            android:id="@+id/gallery_hint_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@+id/gallery_hint"
            android:background="@drawable/hint_arrow"
            android:layout_width="30dp"
            android:layout_above="@+id/gallery_hint"
            />

    <TextView
            android:id="@+id/greeting"
            android:textSize="48dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/default_padding"
            android:text="@string/greeting"/>

    <TextView
        android:layout_marginTop="@dimen/default_element_padding"
        android:layout_below="@+id/greeting"
        android:id="@+id/install_language"
        android:layout_marginRight="@dimen/default_padding"
        android:textSize="20dp"
        android:textColor="@color/grey3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/empty_grid_language"/>

    <Button
        android:id="@+id/install_language_button"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/install_language"
        android:layout_marginTop="@dimen/default_padding"
        android:drawableLeft="@drawable/ic_action_language"
        android:gravity="center"
        android:text="@string/empty_grid_download_language"
        android:textColor="@android:color/black"
        android:theme="@style/ColoredButton"
        app:backgroundTint="@color/accent" />


    <TextView
        android:id="@+id/gallery_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fairy_hint"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/default_element_padding"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="57dp"
        android:text="New Image"
        android:textColor="@color/grey3"
        android:textSize="20dp" />

    <TextView
            android:id="@+id/fairy_hint"
            android:textSize="15dp"
            android:layout_marginBottom="@dimen/default_padding"
            android:layout_alignParentBottom="true"
            android:textColor="@color/grey3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/empty_grid_fairy"/>
</RelativeLayout>